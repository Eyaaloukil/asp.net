@model IEnumerable<Emprunt>

@{
    ViewBag.Title = "Emprunt List";
}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Bibliothéque</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link " aria-current="page" asp-action="Index" asp-controller="App">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" asp-action="Index" asp-controller="Emprunt">Liste des emprunts</a>
        </li>
       
      </ul>

    <span class="navbar-text" style="margin-left: 50%;">
 bonjour @User.Identity.Name      
 
 </span>
          <a class="nav-link active" aria-current="page" href="#">Déconnexion</a>

    </div>
  </div>
</nav>
<div class="row">
                            <div class="col-md-12">
                                <div class="main-card mb-3 card">
                                    <div class="card-header">Liste des Emprunt
                                        <div class="btn-actions-pane-right">
                                            
                                        </div>
                                    </div>
                                    <div class="table-responsive">
                                        <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                                            <thead>
                                            <tr>
                                                <th class="text-center">Nom Livre</th>
                                                <th class="text-center">Date Retour</th>
                                                <th class="text-center">Actions</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var emprunt in Model)
    {

                               <tr>
                                                <td class="text-center text-muted">@emprunt.Livre.Name</td>

                                                

                                                <td class="text-center">@emprunt.DateRetour</td>
                                               
                                                <td class="text-center">
                                                         
                <a asp-action="Delete" asp-controller="Emprunt" class="btn btn-danger btn-sm" asp-route-id="@emprunt.Id">Retourner le livre</a>
                                                </td>
                                            </tr>
    }
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="d-block text-center card-footer">
                                      
                                    </div>
                                </div>
                            </div>
                        </div>
    
        </div>
  
</div>