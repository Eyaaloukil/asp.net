@model IEnumerable<Auteur>

@{
    ViewBag.Title = "Auteur List";
}

<div class="row">
                            <div class="col-md-12">
                                <div class="main-card mb-3 card">
                                    <div class="card-header">Liste des auteurs
                                        <div class="btn-actions-pane-right">
                                            
                                        </div>
                                    </div>
                                    <div class="table-responsive">
                                        <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                                            <thead>
                                            <tr>
                                                <th class="text-center">#</th>
                                                <th>Nom Auteur</th>
                                                                                                <th>Prenom Auteur</th>

                                                <th class="text-center">Actions</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var auteur in Model)
    {

                               <tr>
                                                <td class="text-center text-muted">@auteur.Id</td>

                                                

                                                <td class="text-center">@auteur.Nom</td>
                                                                                               <td class="text-center">@auteur.Prenom</td>

                                                <td class="text-center">
                                                         
                <a asp-action="Edit" asp-controller="Auteur" class="btn btn-primary btn-sm" asp-route-id="@auteur.Id">Editer</a>
                <a asp-action="Delete" asp-controller="Auteur" class="btn btn-danger btn-sm" asp-route-id="@auteur.Id">Supprimer</a>
                                                </td>
                                            </tr>
    }
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="d-block text-center card-footer">
                                      
                                    </div>
                                </div>
                            </div>
                        </div>
    
        </div>
  
</div>