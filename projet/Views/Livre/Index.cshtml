@model IEnumerable<Livre>

@{
    ViewBag.Title = "Livre List";
}


<div class="card-deck">
    @foreach (var livre in Model)
    {
        var photoPath = "~/images/" + (livre.PhotoPath ?? "noimage.jpg");
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h5><b>Nom : </b> @livre.Name</h5>
                <h5><b>Categorie :</b>@livre.Categorie</h5>
                <h5><b>Prix :</b> @livre.price</h5>
            </div>

            <img class="card-img-top imageThumbnail" src="@photoPath"
                 asp-append-version="true" />

            <div class="card-footer text-center">
                <a asp-controller="Livre" asp-action="Details" asp-route-id="@livre.Id"
                   class="btn btn-primary m-1">View</a>
                <a asp-action="Edit" asp-controller="Livre" class="btn btn-primary m-1" asp-route-id="@livre.Id">Editer</a>
                <a asp-action="Delete" asp-controller="Livre" class="btn btn-danger m-1" asp-route-id="@livre.Id">Supprimer</a>
            </div>
        </div>
    }
</div>