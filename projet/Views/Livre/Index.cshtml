@model IEnumerable<Livre>

@{
    ViewBag.Title = "Livre List";
}

<div class="row">
                            <div class="col-md-12">
                                <div class="main-card mb-3 card">
                                    <div class="card-header">Liste des livres
                                        <div class="btn-actions-pane-right">
                                            
                                        </div>
                                    </div>
                                    <div class="table-responsive">
                                        <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                                            <thead>
                                            <tr>
                                                <th class="text-center">#</th>
                                                <th>Titre</th>
                                                <th class="text-center">Categorie</th>
                                                <th class="text-center">Prix</th>
                                                <th class="text-center">Actions</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var livre in Model)
    {
          var photoPath = "/images/" + (livre.PhotoPath ?? "noimage.jpg");

                               <tr>
                                                <td class="text-center text-muted">@livre.Id</td>

                                                <td>
                                                    <div class="widget-content p-0">
                                                        <div class="widget-content-wrapper">
                                                            <div class="widget-content-left mr-3">
                                                                <div class="widget-content-left">
                                                                    <img width="40"  src="@photoPath" alt="">
                                                                </div>
                                                            </div>
                                                            <div class="widget-content-left flex2">
                                                                <div class="widget-heading"> @livre.Name</div>
                                                                                                                                <div class="widget-subheading opacity-7">Web Developer</div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="text-center">                @Html.DisplayFor(modelItem => livre.Category.Id)</td>

                                                <td class="text-center">@livre.price</td>
                                               
                                                <td class="text-center">
                                                          <a asp-controller="Livre" asp-action="Details" asp-route-id="@livre.Id"
                   class="btn btn-primary btn-sm">Détails</a>
                <a asp-action="Edit" asp-controller="Livre" class="btn btn-primary btn-sm" asp-route-id="@livre.Id">Editer</a>
                <a asp-action="Delete" asp-controller="Livre" class="btn btn-danger btn-sm" asp-route-id="@livre.Id">Supprimer</a>
                                                </td>
                                            </tr>
    }
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="d-block text-center card-footer">
                                      
                                    </div>
                                </div>
                            </div>
                        </div>
    
        </div>
  
</div>